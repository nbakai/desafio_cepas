<p id="notice"><%= notice %></p>

<h1>Enologos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Nacionalidad</th>
      <th>Revista</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enologos.each do |enologo| %>
      <tr>
        <td><%= enologo.nombre %></td>
        <td><%= enologo.edad %></td>
        <td><%= enologo.nacionalidad %></td>
        <td><% enologo.enologo_revists.each do |revista|%> 
          <ul>
          <li><%=revista.revist.nombre%></li> 
         <br></ul>
         <%end%></td>
        <td><ul><% enologo.enologo_revists.each do |revista|%> 
            <%=revista.cargo%>  
        <%end%><br></ul></td>
        <%# if current_user.admi?%>
          <td><%= link_to 'Show', enologo %></td>
          <td><%= link_to 'Edit', edit_enologo_path(enologo) %></td>
          <td><%= link_to 'Destroy', enologo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%#end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%# if current_user.admi?%>
  <%= link_to 'New Enologo', new_enologo_path %>
<%#end%>
