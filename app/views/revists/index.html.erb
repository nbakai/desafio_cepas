<p id="notice"><%= notice %></p>

<h1>Revists</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @revists.each do |revist| %>
      <tr>
        <td><%= revist.nombre %></td>
        <% if current_user.admi?%>
          <td><%= link_to 'Show', revist %></td>
          <td><%= link_to 'Edit', edit_revist_path(revist) %></td>
          <td><%= link_to 'Destroy', revist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admi?%>
  <%= link_to 'New Revist', new_revist_path %>
<%end%>
